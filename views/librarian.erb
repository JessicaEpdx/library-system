<div class="row">
  <div class="col-sm-6">
    <h2>Add a Book:</h2>
    <form action="/books/new" method="post">
      <div class="form-group">
      <label for="title">Book Title</label>
      <input name="title" id="title" type="text" class="form-control" placeholder="ex: Harry Potter and the Sorcerer's Stone">
      </div>
      <div class="form-group">
        <label for="author">Book Author</label>
        <input name="author" id="author" type="text" class="form-control" placeholder="ex: J.K. Rowling">
      </div>

      <button type="submit" class="btn btn-success">Add Book!</button>
    </form>
  </div>

  <div class="col-sm-6">
    <h2>Add a Patron:</h2>

    <form action="/patrons/new" method="post">
      <div class="form-group">
        <label for="name">Patron Name</label>
        <input name="name" id="name" type="text" class="form-control" placeholder="Harry Potter">
      </div>

      <button type="submit" class="btn btn-success">Add Patron!</button>
    </form>
  </div>
</div>


