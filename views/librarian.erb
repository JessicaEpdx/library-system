<h1>Hi Librarian</h1>

<div class="row">
  <div class="col-sm-6">
    <h2>Add a book:</h2>
  </div>
  <div class="col-sm-6">
    <a href="/" role="button" class="btn btn-primary" style="float: right;">Return Home</a>
  </div>
</div>

<form action="/books/new" method="post">
  <div class="form-group">
  <label for="title">Book Title</label>
  <input name="title" id="title" type="text" class="form-control" placeholder="ex: Harry Potter and the Sorcerer's Stone">
  </div>
  <div class="form-group">
    <label for="author">Book Author</label>
    <input name="author" id="author" type="text" class="form-control" placeholder="ex: J.K. Rowling">
  </div>

  <button type="submit" class="btn btn-success">Add Book!</button>
</form>
<br>
<ul class="book-list" style="font-size: 20px; list-style:none; ">
  <% @books.each do |book| %>
    <li><a class="book" style="color:purple;" href="/book/<%= book.id() %>"><%= book.title() %>; <%= book.author() %></a></li>
  <% end %>
</ul>
