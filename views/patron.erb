<h1>Welcome to the Library, <%= @patron.name() %>.</h1>

<h3>Check Out a Book</h3>

<form action="/search/author" method="get">
  <input id="id" name="id" type="hidden" value="<%=@patron.id()%>">
  <!-- <div class="form-group">
    <label for="title">Search By Title (case sensitive)</label>
    <input name="title" id="title" type="text" class="form-control" placeholder="ex: Harry Potter and the Sorcerer's Stone">
  </div> -->
  <div class="form-group">
    <label for="author">Search By Author (case sensitive)</label>
    <input name="author" id="author" type="text" class="form-control" placeholder="ex: J.K. Rowling">
  </div>

  <button type="submit" class="btn btn-success">Search!</button>
</form>

<h3>Books Checked out By <%= @patron.name() %>:</h3>
<br>
<ul>
  <% @patron.books().each() do |book| %>
    <li><a class="book" style="color:purple;" href="/book/<%= book.id() %>"><%= book.title() %>; <%= book.author() %></a></li>
  <% end %>
</ul>
