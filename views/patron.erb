
<div class="row">
  <div class="col-sm-10">
    <h1 style="font-size:50px;">Welcome<span style="color:purple;"> <%= @patron.name() %></span></h1>
  </div>
  <div class="col-sm-2">
    <div class="row">
      <a href="/" role="button" class="btn btn-primary" style="float: right; margin-top: 20px">Home</a>
    </div>
    <div class="row">
      <a href="/books" role="button" class="btn btn-warning" style="float: right; margin-top: 5px">All Books</a>
    </div>
  </div>
</div>

<form action="/patrons" method="post">
  <input name="_method" type="hidden" value="delete">
  <input name="id" id="id" type="hidden" value="<%= @patron.id %>">
  <button type="submit" class="btn btn-danger">Delete Patron</button>
</form>


<h3>Check Out a Book</h3>

<form action="/search/author" method="get">
  <input id="id" name="id" type="hidden" value="<%=@patron.id()%>">
  <!-- <div class="form-group">
    <label for="title">Search By Title (case sensitive)</label>
    <input name="title" id="title" type="text" class="form-control" placeholder="ex: Harry Potter and the Sorcerer's Stone">
  </div> -->
  <div class="form-group">
    <label for="author">Search By Author (case sensitive)</label>
    <input name="author" id="author" type="text" class="form-control" placeholder="ex: J.K. Rowling">
  </div>

  <button type="submit" class="btn btn-success">Search!</button>
</form>

<h3>Books Checked out By <%= @patron.name() %>:</h3>
<br>
<ul>
  <% @patron.books().each() do |book| %>
    <li><a class="book" style="color:purple;" href="/book/<%= book.id() %>"><%= book.title() %>; <%= book.author() %></a></li>
  <% end %>
</ul>
